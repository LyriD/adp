<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @order } %>
<table>
    <tr data-hook="cart_items_headers">
      <td class="cart-item-description-header" colspan="2" style="padding-left: 105px;"><%= Spree.t(:item) %></td>
      <td class="cart-item-quantity-header"><%= Spree.t(:qty) %></td>
      <td class="cart-item-price-header"><%= Spree.t(:price) %></td>
      <td class="cart-item-total-header"></td>
      <td class="cart-item-delete-header"></td>
    </tr>
    <%= render partial: 'line_item', collection: order_form.object.line_items, locals: {order_form: order_form} %>

</table>



